<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--        tools:layout_editor_absoluteX="184dp"-->
    <!--        tools:layout_editor_absoluteY="488dp"-->
    <!--        tools:text="Benedict Odoh" />-->

    <EditText
        android:id="@+id/editText_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="245dp"
        android:layout_marginBottom="39dp"
        android:autofillHints="What is your name?"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.243" />

    <Button
        android:id="@+id/button_first"
        android:layout_width="193dp"
        android:layout_height="0dp"
        android:onClick="sendMessage"
        android:text="@string/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_first"
        app:layout_editor_absoluteX="@android:dimen/thumbnail_width"
        app:layout_editor_absoluteY="@android:dimen/thumbnail_height" />
</androidx.constraintlayout.widget.ConstraintLayout>